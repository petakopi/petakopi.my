<!-- Open Graph / Facebook -->
<meta property="og:type" content="website">
<meta property="og:url" content="https://petakopi.my<%= request.fullpath  %>">
<% if content_for?(:page_title) %>
  <meta property="og:title" content="petakopi.my — <%= yield(:page_title) %>">
<% else %>
  <meta property="og:title" content="petakopi.my — Get real coffee anywhere">
<% end %>
<meta property="og:description" content="Discover and share new freshly brewed coffee places around you. Built by the community for everyone.">
<% if content_for?(:page_image) %>
  <meta property="og:image" content="<%= yield(:page_image) %>">
<% else %>
  <meta property="og:image" content="<%= image_url "social_logo.png" %>">
<% end %>

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image">
<meta property="twitter:url" content="https://petakopi.my<%= request.fullpath  %>">
<% if content_for?(:page_title) %>
  <meta property="twitter:title" content="petakopi.my — <%= yield(:page_title) %>">
<% else %>
