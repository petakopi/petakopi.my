<% end %>
<meta property="twitter:description" content="Discover and share new freshly brewed coffee places around you. Built by the community for everyone.">
<% if content_for?(:page_image) %>
  <meta property="twitter:image" content="<%= yield(:page_image) %>">
<% else %>
  <meta property="twitter:image" content="<%= image_url "social_logo.png" %>">
<% end %>
