<ul role="list" class="space-y-3">
  <li class="overflow-hidden rounded-md bg-white px-6 py-4 shadow relative flex items-center">
    <div class="flex-shrink-0">
      <% if current_user.avatar.attached? %>
        <%= image_tag rails_public_blob_url(current_user.avatar), class: "h-10 w-10 rounded-full border border-brown" %>
      <% else %>
        <span class="h-8 w-8 rounded-full">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0 0 12 15.75a7.488 7.488 0 0 0-5.982 2.975m11.963 0a9 9 0 1 0-11.963 0m11.963 0A8.966 8.966 0 0 1 12 21a8.966 8.966 0 0 1-5.982-2.275M15 9.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
          </svg>
        </span>
      <% end %>
    </div>
    <div class="min-w-0 flex-1">
      <a href="<%= user_path(id: current_user.username) %>" class="block px-4 py-2 text-sm text-gray-700">
        <span class="absolute inset-0" aria-hidden="true"></span>
        Your Profile
      </a>
    </div>
  </li>
  <li class="overflow-hidden rounded-md bg-white px-6 py-4 shadow relative flex items-center">
    <div class="flex-shrink-0">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m0-10.036A11.959 11.959 0 0 1 3.598 6 11.99 11.99 0 0 0 3 9.75c0 5.592 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.57-.598-3.75h-.152c-3.196 0-6.1-1.25-8.25-3.286Zm0 13.036h.008v.008H12v-.008Z" />
      </svg>
    </div>
    <div class="min-w-0 flex-1">
      <a href="<%= edit_user_path(id: current_user.username) %>" class="block px-4 py-2 text-sm text-gray-700">
        <span class="absolute inset-0" aria-hidden="true"></span>
        Your Account
      </a>
    </div>
  </li>
  <li class="overflow-hidden rounded-md bg-white px-6 py-4 shadow relative flex items-center">
    <div class="flex-shrink-0">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 21v-7.5a.75.75 0 0 1 .75-.75h3a.75.75 0 0 1 .75.75V21m-4.5 0H2.36m11.14 0H18m0 0h3.64m-1.39 0V9.349M3.75 21V9.349m0 0a3.001 3.001 0 0 0 3.75-.615A2.993 2.993 0 0 0 9.75 9.75c.896 0 1.7-.393 2.25-1.016a2.993 2.993 0 0 0 2.25 1.016c.896 0 1.7-.393 2.25-1.015a3.001 3.001 0 0 0 3.75.614m-16.5 0a3.004 3.004 0 0 1-.621-4.72l1.189-1.19A1.5 1.5 0 0 1 5.378 3h13.243a1.5 1.5 0 0 1 1.06.44l1.19 1.189a3 3 0 0 1-.621 4.72M6.75 18h3.75a.75.75 0 0 0 .75-.75V13.5a.75.75 0 0 0-.75-.75H6.75a.75.75 0 0 0-.75.75v3.75c0 .414.336.75.75.75Z" />
      </svg>
    </div>
    <div class="min-w-0 flex-1">
      <a href="<%= coffee_shops_path %>" class="block px-4 py-2 text-sm text-gray-700">
        <span class="absolute inset-0" aria-hidden="true"></span>
        Your Coffee Shops
      </a>
    </div>
  </li>
  <li class="overflow-hidden rounded-md bg-white px-6 py-4 shadow relative flex items-center">
    <div class="flex-shrink-0">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 9V5.25A2.25 2.25 0 0 1 10.5 3h6a2.25 2.25 0 0 1 2.25 2.25v13.5A2.25 2.25 0 0 1 16.5 21h-6a2.25 2.25 0 0 1-2.25-2.25V15m-3 0-3-3m0 0 3-3m-3 3H15" />
      </svg>
    </div>
    <div class="min-w-0 flex-1">
      <a href="<%= destroy_user_session_path %>" data-turbo-method="delete" class="block px-4 py-2 text-sm text-gray-70">
        <span class="absolute inset-0" aria-hidden="true"></span>
        Sign out
      </a>
    </div>
  </li>
</ul>
